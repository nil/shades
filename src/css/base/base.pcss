* {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  outline: 0;
  border: 0;
  font: inherit;
}

body {
  background: $color--base-bg;
  color: $color--base-text;

  font-family: $type--base-font-family;
  font-size: $type--base-font-size;
  text-rendering: geometricPrecision;

  cursor: default;
}
