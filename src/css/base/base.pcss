* {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  outline: 0;
  border: 0;
  border-radius: 0;
}

html,
body,
#app {
  min-height: 100vh;
}

body {
  background: var(--white);
  color: var(--black);

  font-family: var(--t_sans);
  font-size: 15px;
  text-rendering: geometricPrecision;

  cursor: default;
}

@media screen and (prefers-reduced-motion: reduce) {
  *,
  *:before,
  *:after {
    transition: none !important;
  }
}

h1 {
  padding: var(--s_input--margin);
}
