* {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  outline: 0;
  border: 0;
  font: inherit;
}

body {
  background: var(--c_base--bg);
  color: var(--c_base--text);

  font-family: var(--t_base--font-family);
  font-size: var(--t_base--font-size);
  text-rendering: geometricPrecision;

  cursor: default;
}
